#master-container
  font-family: helvetica


.container-fluid
  padding: 0px
  
.navbar
  margin-bottom: 0


a:hover
  text-decoration: none


ul.flash-messages
  width:100vw
  color: white
  margin-bottom:0
  list-style: none
  text-align: center
  padding:10px
  height:40px
  width:100vw 

  &#error
    background: #e04646

  &#info
    background: #05cc47


.page-content
  margin-left: 15px
  margin-right: 15px
  max-width:1200px
  margin: auto
  font-family: 'Open Sans', sans-serif;
  
  #reviews-header
  #companies-header
    font-family: 'Poiret One', cursive;
    text-align: center
    
  .company-box
    // height:250px
    // border: 1px solid gray
    border-bottom: 1px solid gray
    background: light-gray
    margin-top:10px
    margin-bottom:10px
    padding: 10px 10px 25px 10px
    overflow: hidden
    clear: both

    
    #name
      font-size: 18px
      color: #1ca0de
  
  #clear-space
    height:25px
    background: white
    // padding-bottom:10px

  .review-box
    border-bottom: 1px solid gray
    margin-top:10px
    margin-bottom:10px
    padding: 10px
    overflow: hidden
    clear: both
    
    #review-company-name
      font-size: 18px
      color: #1ca0de
    
    #questions

    #create-date
      font-size:10px
  
  .main-review
    border-bottom: 1px solid gray
    margin-top:10px
    margin-bottom:10px
    padding: 10px
    
    #review-rating
      font-size: 18px
      color: #1ca0de

    #create-date
      font-size:10px  
      
  #review-tag-links
    text-align: center
    
    .review-tag
      margin-right: 20px
      color: blue
  
  #trending-up-container
    border: 1px solid gray
    padding: 15px
    margin-bottom: 25px

    #trending-up-header
      color: green
      text-align: center  
      font-family: 'Poiret One', cursive;

  #trending-down-container
    border: 1px solid gray
    padding: 15px
    margin-bottom: 25px
    
    #trending-down-header
      color: red
      text-align: center
      font-family: 'Poiret One', cursive;

.jumbotron
  background-color: cyan
  margin-bottom:0
  border-radius:none

  #jumbotron-header-main
    text-align: center
    font-size: 18
    // font-family: 'Quicksand', sans-serif
    font-family: 'Poiret One', cursive

  #slogan
    text-align: center
    font-family: 'Poiret One', cursive


  #signup-container 
  #login-container 
    width: 450px
    margin:auto
    border: 1px solid gray
    background: white
    padding: 25px
    text-align: center
    
    #signup-header
    #login-header
      text-align:center

    input#first-name.form-control
    input#last-name.form-control
    input#email.form-control
    input#password.form-control
    input#password-confirm.form-control
      width: 400px    
      margin-bottom: 5px
    

    a#signup-link
    a#login-link
      font-size: 10px
      color: gray
  
