#master-container
  font-family: helvetica

.container-fluid
  padding: 0px

.navbar
  margin-bottom: 0


a:hover
  text-decoration: none


ul.flash-messages
  width:100vw
  color: white
  margin-bottom:0
  list-style: none
  text-align: center
  padding:10px
  height:40px
